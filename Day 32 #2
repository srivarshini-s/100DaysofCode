class Solution:
    def printTriangle(self, N):
        for i in range(N):
            for j in range(i+1):
                print("* ",end="")
            print()
        

class Solution {

    void printTriangle(int n) {
        // code here
        for(int i=0;i<n;i++){
            for(int j=0;j<i+1;j++){
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
